<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="CertificatesPlugin">
        <param name="android-package" value="de.martinreinhardt.cordova.plugins.CertificatesPlugin" />
    </feature>
    <name>CryptoSite</name>
    <description>
        Currency exchange
    </description>
    <author email="a.proskurin@quantumobile.com" href="http://cryptosite.quantumobile.co">
        QuantuMobile Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://argussearch.quantumobile.co/*" />
    <allow-navigation href="https://www.paypal.com/*" />
    <allow-navigation href="https://www.sandbox.paypal.com/*" />
    <access origin="https://www.sandbox.paypal.com/*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
